<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_light"
    tools:context=".SetupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- ✅ 뒤로가기 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기"
            android:src="@android:drawable/ic_media_previous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSetupTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="새로운 시작을 위한 준비"
            android:textColor="@color/text_primary_light"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSetupDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="금연 여정을 기록하고, 성공으로 이끌어 드릴게요."
            android:textColor="@color/text_secondary_light"
            app:layout_constraintTop_toBottomOf="@id/tvSetupTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ✅ 금연 시작일 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilQuitDate"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="금연 시작일"
            app:errorEnabled="true"
            app:errorTextColor="@android:color/holo_red_dark"
            app:boxStrokeErrorColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/tvSetupDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etQuitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:focusable="false"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ✅ 하루 평균 흡연량 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDailyCigarettes"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="하루 평균 흡연량 (개비)"
            app:errorEnabled="true"
            app:errorTextColor="@android:color/holo_red_dark"
            app:boxStrokeErrorColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/tilQuitDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDailyCigarettes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ✅ 담배 한 갑 가격 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPackPrice"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="담배 한 갑 가격 (원)"
            app:errorEnabled="true"
            app:errorTextColor="@android:color/holo_red_dark"
            app:boxStrokeErrorColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/tilDailyCigarettes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPackPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ✅ 총 흡연 기간 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSmokingYears"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="총 흡연 기간 (년)"
            app:errorEnabled="true"
            app:errorTextColor="@android:color/holo_red_dark"
            app:boxStrokeErrorColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/tilPackPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSmokingYears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnStartQuit"
            style="@style/Widget.App.RoundButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="금연 시작"
            android:backgroundTint="@color/primary_mint_green"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tilSmokingYears"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
