<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.jiminandminseok.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_homeFragment_to_setupFragment"
            app:destination="@id/setupFragment" />

        <action
            android:id="@+id/action_homeFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/setupFragment"
        android:name="com.example.jiminandminseok.SetupFragment"
        android:label="SetupFragment">

        <action
            android:id="@+id/action_setupFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.jiminandminseok.DashboardFragment"
        android:label="Dashboard">

        <action
            android:id="@+id/action_dashboardFragment_to_addFragment"
            app:destination="@id/addFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/quotesFragment"
        android:name="com.example.jiminandminseok.QuotesFragment"
        android:label="Quotes" />

    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.jiminandminseok.AddFragment"
        android:label="Add">

        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.jiminandminseok.ListFragment"
        android:label="List" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.jiminandminseok.DetailFragment"
        android:label="Detail" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.jiminandminseok.SettingsFragment"
        android:label="Settings" />

</navigation>
